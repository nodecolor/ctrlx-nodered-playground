{
  "$schema": "https://json-schema.boschrexroth.com/ctrlx-automation/ctrlx-core/apps/package-manifest/package-manifest.v1.schema.json",
  "version": "1.0.0",
  "id": "ctrlx-node-red-flowforge",
  "certificatestores": [
    {
      "id": "node-red",
      "title": "Node-RED",
      "description": "Node-RED certificate store"
    }
  ],
  "services": {
    "proxyMapping": [
      {
        "name": "ctrlx-node-red-flowforge.web",
        "url": "/node-red",
        "binding": ":1881",
        "options": [
          {
            "option": "websocket",
            "value": ""
          }
        ]
      },
      {
        "name": "ctrlx-device-agent-flowforge.web",
        "url": "/device-agent",
        "binding": ":1882",
        "options": [
          {
            "option": "websocket",
            "value": ""
          }
        ]
      },
      {
        "name": "ctrlx-node-red-flowforge.agent",
        "url": "/node-red-device",
        "binding": "unix://{$SNAP_DATA}/package-run/ctrlx-node-red-flowforge/ctrlx-node-red-flowforge.agent.sock"
      }
    ]
  },
  "scopes-declaration": [
    {
      "identifier": "ctrlx-node-red-flowforge.web",
      "name": "Node-RED",
      "description": "Node-RED permissions",
      "scopes": [
        {
          "identifier": "ctrlx-node-red-flowforge.web.rwx",
          "name": "Manage Node-RED ",
          "description": ""
        },
        {
          "identifier": "ctrlx-node-red-flowforge.web.r",
          "name": "View Node-RED",
          "description": ""
        }
      ]
    }
  ],
  "menus": {
    "sidebar": [
      {
        "id": "node-red",
        "title": "Node-RED",
        "icon": "ctrlx-ic-node-red",
        "permissions": [],
        "items": [
          {
            "id": "node-red-admin",
            "title": "Flow Editor",
            "link": "/node-red",
            "target": "node-red-admin",
            "permissions": []
          },
          {
            "id": "flowforge-support",
            "title": "Node-RED support request",
            "link": "https://flowforge.com/support/",
            "target": "flowforge-support",
            "permissions": []
          },
          {
            "id": "node-red-dashboard",
            "title": "Dashboard",
            "link": "/node-red/ui",
            "target": "node-red-dashboard",
            "permissions": []
          },
          {
            "id": "ctrlx-node-red-flowforge.agent",
            "title": "Device Agent",
            "link": "/node-red-device",
            "permissions": []
          }
        ]
      }
    ],
    "settings": [],
    "overview": [
      {
        "id": "node-red-dashboard",
        "title": "Node-RED Dashboard",
        "icon": "ctrlx-ic-node-red",
        "link": "/node-red/ui",
        "target": "node-red-dashboard",
        "permissions": []
      }
    ]
  },
  "configuration": {
    "appDirectories": [
      {
        "name": "node-red",
        "description": "Node-RED",
        "icon": "bosch-ic-directory",
        "scopes": [],
        "copyOnLoad": true
      }
    ]
  },
  "licenses": [
    {
      "name": "SWL-W-XCx-NREDxFLOWxxxxxx-Y1NN",
      "title": "Node-RED by FlowForge License",
      "description": "Unlock the App's functionality.",
      "required": true
    }
  ]
}
